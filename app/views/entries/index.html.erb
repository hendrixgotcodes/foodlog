

<h1>Entries</h1>

<% content_for :title do %>
  Foodlog &ndash; <%= DateTime.now %>
<% end %>

<div class="columns mt-6 is-centered" id="entries">
  <div class="column is-one-quarter">
    
    <% @entries.each do |entry| %>
      <div class="card mb-4">
        <div class="card-content">
          <div class="content">
            <%= render entry %>
          </div>
        </div>
        <footer class="card-footer">
          <%= link_to "Show this entry", entry, class: "card-footer-item" %>
          <%= link_to "Edit this entry", edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to "Delete this entry", entry, method: :delete, data: {confirm: "Are you sure?"}, class: "card-footer-item" %>
        </footer>
      </div>
    <% end %>
  </div>
</div>
